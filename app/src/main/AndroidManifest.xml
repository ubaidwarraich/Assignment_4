<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.emailactivation">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EmailActivation">
        <activity android:name=".activities.HodViewFormActivity"></activity>
        <activity android:name=".activities.HodDashboardActivity" />
        <activity android:name=".activities.AproveFormActivity" />
        <activity android:name=".activities.AdminDashboardActivity" />
        <activity android:name=".activities.ApplicationStatusActivity" />
        <activity android:name=".activities.SignUpActivity" />
        <activity android:name=".activities.ViewApplicationStatus" />
        <activity android:name=".activities.StudentDashboard" />
        <activity android:name=".activities.EmailActivationFormActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>